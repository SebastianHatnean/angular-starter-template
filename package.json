{
  "name": "angular-starter-template",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "npm run build:lib & npm run build:showcase",
    "postbuild:lib": "cp README.md dist/angular-starter-template && cp LICENCE dist/angular-starter-template",
    "build:lib": "ng build angular-starter-template",
    "build:showcase": "ng build angular-starter-template-showcase",
    "watch": "ng build --watch --configuration development",
    "format:check": "npm run format:check-lib && npm run format:check-showcase",
    "format:write": "npm run format:write-lib && npm run format:write-showcase",
    "format:write-lib": "prettier --write \"projects/angular-starter-template/**/*.{ts,js,json,html,scss}\"",
    "format:write-showcase": "prettier --write \"projects/angular-starter-template-showcase/**/*.{ts,js,json,html,scss}\"",
    "test": "ng test",
    "serve:ssr:angular-starter-template-showcase": "node dist/angular-starter-template-showcase/server/server.mjs"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^17.0.0",
    "@angular/common": "^17.0.0",
    "@angular/compiler": "^17.0.0",
    "@angular/core": "^17.0.0",
    "@angular/forms": "^17.0.0",
    "@angular/platform-browser": "^17.0.0",
    "@angular/platform-browser-dynamic": "^17.0.0",
    "@angular/platform-server": "^17.0.0",
    "@angular/router": "^17.0.0",
    "@angular/ssr": "^17.1.3",
    "express": "^4.18.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.2"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.1.3",
    "@angular/cli": "^17.0.1",
    "@angular/compiler-cli": "^17.0.0",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^17.1.0",
    "prettier": "^3.2.5",
    "typescript": "~5.2.2"
  }
}
